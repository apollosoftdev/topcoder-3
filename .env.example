# AI Arena Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment mode: development | local | production
# - development: localhost development
# - local: local.topcoder-dev.com with HTTPS
# - production: Uses topcoder.com URLs
NODE_ENV=local

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Server ports
PORT=8080
HTTPS_PORT=443

# Enable HTTPS (true/false)
USE_HTTPS=true

# SSL Certificate paths (relative to project root)
SSL_KEY_PATH=ssl/local.topcoder-dev.com.key
SSL_CERT_PATH=ssl/local.topcoder-dev.com.crt

# =============================================================================
# TOPCODER AUTHENTICATION - DEV ENVIRONMENT
# =============================================================================

# Auth0 Connector URL (for iframe and login redirects)
TC_AUTH_CONNECTOR_URL=https://accounts-auth0.topcoder-dev.com

# Auth URL (same as connector for most cases)
TC_AUTH_URL=https://accounts-auth0.topcoder-dev.com

# Accounts App URL
TC_ACCOUNTS_APP_URL=https://accounts.topcoder-dev.com

# Auth0 CDN URL
TC_AUTH0_CDN_URL=https://cdn.auth0.com

# JWKS URL for RS256 token validation
TC_JWKS_URL=https://topcoder-dev.auth0.com/.well-known/jwks.json

# =============================================================================
# COOKIE CONFIGURATION
# =============================================================================

# Cookie names
TC_COOKIE_NAME=tcjwt
TC_V3_COOKIE_NAME=v3jwt
TC_REFRESH_COOKIE_NAME=tcrft

# Token expiration offset in seconds
TC_TOKEN_EXPIRATION_OFFSET=60

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API base URL (relative path)
API_BASE_URL=/api

# =============================================================================
# OPTIONAL: HS256 Secret for V2 token validation
# =============================================================================
# Required only if validating V2 (HS256) tokens
# Get this from Topcoder admin or use development test secret
# TC_AUTH_SECRET=your-hs256-secret-here
